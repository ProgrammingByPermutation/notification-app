<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<HBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.nullinside.notification_app.controls.AlertRowController">
    <CheckBox fx:id="enabledCheckBox" mnemonicParsing="false" onAction="#onEnabledChanged">
        <HBox.margin>
            <Insets right="10.0"/>
        </HBox.margin>
    </CheckBox>
    <VBox fx:id="alertContainer"/>
    <Button mnemonicParsing="false" onAction="#onEditClicked" text="Edit">
        <HBox.margin>
            <Insets left="10.0" right="10.0"/>
        </HBox.margin>
    </Button>
    <Button fx:id="deleteButton" mnemonicParsing="false" text="X"/>
</HBox>
